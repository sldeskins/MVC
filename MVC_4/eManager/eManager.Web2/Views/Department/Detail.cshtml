@model eManager.Domain.Department

@{
    ViewBag.Title = "Department Detail";
}

<h2>Department Detail for @Model.Name</h2>
 
@Html.ActionLink("Create an employee", "Create", "Employee", new
{
    DepartmentId = @Model.ID
}, null)

<table>
    <tr>
        <th>Name</th>
        <th></th>
    </tr>
    @foreach (var employee in Model.Employees)
    {
        <tr>
            <td>@employee.Name</td>
            <td></td>
        </tr>
    }
</table>
