@model IEnumerable<WebApplicationRealEstateWithMongoDB.Rentals.Rental>

@{
    ViewBag.Title = "Index Rental Listings - using newer mongo driver";
}

<h2>Index Rental Listings</h2>

<p>
    @Html.ActionLink("Post Rental", "Post")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberOfRooms)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfRooms)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddressString)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>@item.Adjustments.Select(a => a.Describe()).LastOrDefault()</td>
            <td>
                @Html.ActionLink("Adjust Price", "AdjustPrice", new
           {
               id = item.Id
           })
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new
           {
               id = item.Id
           })
                @* @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                *@
            </td>

        </tr>
    }

</table>
